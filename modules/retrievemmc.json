{
    "moduleid"    : "retrievemmc"
    ,"label"      : "Run MMC"
    ,"help"       : "Run Monomer Monte Carlo on selected structures"
    ,"executable" : "retrievemmc.php"
#    ,"resource"   : "docker-local"
#    ,"dependencies" : [ 
#        { "base" : "python" }
#        ,{ "file" : "mass_load.py" }
# comment above 2 lines and uncomment 2 lines below for perl executable
#        { "base" : "perl" }
#        ,{ "cpan" : "JSON" }
#    ]
    ,"loadfields"      : "retrievemmc_load.php"
    ,"noreset"         : "true"
    ,"panels" : [
        {
            "root" : {
                "label" : [
                    1,
                    1
                ],
                "data" : [
                    1,
                    2
                ],
                "gap" : "1px",
                "align" : "left",
                "size" : [
                    1,
                    "auto"
                ]
            }
        },
        {
            "header" : {
                "data" : [
                    2,
                    1
                ],
                "label" : [
                    1,
                    1
                ],
                "align" : "center",
                "gap" : "1px",
                "size" : [
                    "auto",
                    "auto"
                ],
                "location" : [
                    "next",
                    "full"
                ]
            }
        },
        {
            "body" : {
                "location" : [
                    "next",
                    "full"
                ],
                "size" : [
                    "auto",
                    [
                        1,
                        1
                    ]
                ]
            }
        },
        {
            "footer" : {
                "align" : "center",
                "size" : [
                    "auto",
                    "auto"
                ],
                "location" : [
                    "next",
                    "full"
                ],
                "data" : [
                    2,
                    1
                ],
                "label" : [
                    1,
                    1
                ]
            }
        },
        {
            "inputpanel" : {
                "parent" : "body",
                "location" : [
                    "next",
                    "full"
                ],
                "align" : "left",
                "size" : [
                    "auto",
                    [1,1]
                ]
            }
        },
        {
            "msgspanel" : {
                "parent" : "body",
                "location" : [
                    "next",
                    "full"
                ],
                "align" : "left",
                "size" : [
                    "auto",
                    [1,1]
                ]
            }
        },
        {
            "infopanel" : {
                "parent" : "body",
                "data" : [
                    2,
                    1
                ],
                "label" : [
                    1,
                    1
                ],
                "align" : "center",
                "gap" : "1px",
                "size" : [
                    "auto",
                    "auto"
                ],
                "location" : [
                    "next",
                    "full"
                ]
            }
        },
        {
            "resultpanel" : {
                "align" : "left",
                "size" : [
                    "auto",
                    [ 1, 1 ]
                ],
                "location" : [
                    "next",
                    "full"
                ],
                "data" : [
                    1,
                    2
                ],
                "parent" : "body",
                "repeats" : {
                    "indent" : "10px"
                },
                "label" : [
                    1,
                    1
                ]
            }
        }
    ]
    ,"fields"   : [
        {
            "role"       : "input"
            ,"id"        : "module_header"
            ,"label"     : "Retrieve Monomer Monte Carlo Results"
            ,"type"      : "label"
            ,"default"   : "header4"
            ,"prehline"  : "true"
            ,"posthline" : "true"
            ,"layout" : {
                "parent" : "header"
            }
        }
        ,{
            "role"              : "output"
            ,"id"               : "pname"
            ,"label"            : "Project name"
            ,"type"             : "text"
            ,"required"         : "true"
            ,"help"             : "Name for this project - only letters, numbers and underscores are allowed"
            ,"pattern"          : "[a-zA-Z0-9_]+"
            ,"specifiedproject" : ""
            ,"layout"           : {
                "parent" : "inputpanel"
            }

        }
        ,{
            "role"              : "output"
            ,"id"               : "desc"
            ,"label"            : "Description"
            ,"type"             : "textarea"
            ,"required"         : "true"
            ,"help"             : "Description information about this project"
            ,"layout"     : {
                "parent" : "inputpanel"
            }
        }
        ,{
            "label"             : "Downloads",
            "role"              : "output",
            "help"              : "",
            "id"                : "downloads",
            "type"              : "html",
            "labelmargintop"    : "0.5rem"
            ,"layout"           : {
                "parent" : "inputpanel"
            }
        }
        ,{
            "label"             : "Stride"
            ,"role"              : "input"
            ,"help"              : "Stride defines how many frames will be skipped"
            ,"id"                : "mmcstride"
            ,"type"              : "integer"
            ,"minimum"           : 1
            ,"default"           : 10
            ,"layout"           : {
                "parent" : "inputpanel"
            }
        }
        ,{
            "label"             : "Extract frames"
            ,"role"              : "input"
            ,"help"              : "Extract frames once you accept the given Stride"
            ,"id"                : "extractframes"
            ,"type"              : "checkbox"
            ,"layout"           : {
                "parent" : "inputpanel"
            }
        }
        ,{
            "role"              : "output"
            ,"label"            : " "
            ,"type"             : "plotly"
            ,"id"               : "histplot2"
            ,"layout"           : {
                "parent" : "resultpanel"
                ,"data" : [ 1, 1 ]
            }
        }
        ,{
            "role"              : "output"
            ,"label"            : " "
            ,"type"             : "plotly"
            ,"id"               : "histplot"
            ,"layout"           : {
                "parent" : "resultpanel"
                ,"data" : [ 0, 2 ]
            }
        }
    ]
}
