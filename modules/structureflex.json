{
    "moduleid"    : "structureflex"
    ,"label"      : "Structure info, flexible regions"
    ,"help"       : "Structure info, define flexible regions"
    ,"executable" : "structureflex.php"
#    ,"resource"   : "docker-local"
#    ,"dependencies" : [ 
#        { "base" : "python" }
#        ,{ "file" : "mass_load.py" }
# comment above 2 lines and uncomment 2 lines below for perl executable
#        { "base" : "perl" }
#        ,{ "cpan" : "JSON" }
#    ]
    ,"requireproject"       : "true"
    ,"loadfields"           : "structureflex_load.php"
    ,"panels" : [
        {
            "root" : {
                "label" : [
                    1,
                    1
                ],
                "data" : [
                    1,
                    2
                ],
                "gap" : "1px",
                "align" : "left",
                "size" : [
                    1,
                    "auto"
                ]
            }
        },
        {
            "header" : {
                "data" : [
                    2,
                    1
                ],
                "label" : [
                    1,
                    1
                ],
                "align" : "center",
                "gap" : "1px",
                "size" : [
                    "auto",
                    "auto"
                ],
                "location" : [
                    "next",
                    "full"
                ]
            }
        },
        {
            "body" : {
                "location" : [
                    "next",
                    "full"
                ],
                "size" : [
                    "auto",
                    [
                        1,
                        1
                    ]
                ]
            }
        },
        {
            "footer" : {
                "align" : "center",
                "size" : [
                    "auto",
                    "auto"
                ],
                "location" : [
                    "next",
                    "full"
                ],
                "data" : [
                    2,
                    1
                ],
                "label" : [
                    1,
                    1
                ]
            }
        },
        {
            "inputpanel" : {
                "parent" : "body",
                "location" : [
                    "next",
                    "full"
                ],
                "align" : "left",
                "size" : [
                    "auto",
                    [1,1]
                ]
            }
        },
        {
            "msgspanel" : {
                "parent" : "body",
                "location" : [
                    "next",
                    "full"
                ],
                "align" : "left",
                "size" : [
                    "auto",
                    [1,1]
                ]
            }
        },
        {
            "resultpanel" : {
                "align" : "left",
                "size" : [
                    "auto",
                    [ 1, 1 ]
                ],
                "location" : [
                    "next",
                    "full"
                ],
                "data" : [
                    1,
                    2
                ],
                "parent" : "body",
                "repeats" : {
                    "indent" : "10px"
                },
                "label" : [
                    1,
                    1
                ]
            }
        }
        ,{
            "structure" : {
                "data" : [
                    2,
                    1
                ],
                "label" : [
                    1,
                    1
                ],
                "align" : "center",
                "parent" : "body",
                "gap" : "1px",
                "size" : [
                    "auto",
                    "auto"
                ],
                "location" : [
                    "next",
                    "full"
                ]
            }
        }
        ,{
            "resultpanel2" : {
                "align" : "left",
                "size" : [
                    "auto",
                    [ 1, 1 ]
                ],
                "location" : [
                    "next",
                    "full"
                ],
                "data" : [
                    1,
                    2
                ],
                "parent" : "body",
                "repeats" : {
                    "indent" : "10px"
                },
                "label" : [
                    1,
                    1
                ]
            }
        }
    ]
    ,"fields"   : [
        {
            "role"       : "input"
            ,"id"        : "module_header"
            ,"label"     : "Structure info, define flexible regions"
            ,"type"      : "label"
            ,"default"   : "header4"
            ,"prehline"  : "true"
            ,"posthline" : "true"
            ,"layout" : {
                "parent" : "header"
            }
        }
        ,{
            "role"              : "output"
            ,"id"               : "pname"
            ,"label"            : "Project name"
            ,"type"             : "text"
            ,"required"         : "true"
            ,"help"             : "Name for this project - only letters, numbers and underscores are allowed"
            ,"pattern"          : "[a-zA-Z0-9_]+"
            ,"specifiedproject" : ""
            ,"layout"     : {
                "parent" : "resultpanel"
            }

        }
        ,{
            "role"              : "output"
            ,"id"               : "desc"
            ,"label"            : "Description"
            ,"type"             : "textarea"
            ,"required"         : "true"
            ,"help"             : "Enter description information about this project"
            ,"layout"     : {
                "parent" : "resultpanel"
            }
        }
        ,{
            "role" : "output",
            "label" : "Name",
            "type" : "text",
            "help" : "The structure file name or the full name from the AlphaFold database",
            "id" : "name",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        },
        {
            "help" : "As reported in the PDB TITLE information",
            "id" : "title",
            "type" : "textarea",
            "role" : "output",
            "label" : "Title",
            "rows" : 3,
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        },
        {
            "help" : "As reported in the PDB SOURCE information",
            "id" : "source",
            "type" : "textarea",
            "role" : "output",
            "label" : "Source",
            "rows" : 5,
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        },
        {
            "label" : "Warnings",
            "role" : "output",
            "help" : "Status of US-SOMO processing",
            "type" : "html",
            "id" : "warnings",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        },
        {
            "label" : "Mean confidence",
            "role" : "output",
            "help" : "For AlphaFold structures only. Mean per-residue confidence is computed from the structure&apos;s AlphaFold residue confidence",
            "type" : "text",
            "id" : "afmeanconf",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        },
        {
            "help" : "The date the file was loaded",
            "id" : "somodate",
            "type" : "text",
            "label" : "Load date",
            "role" : "output",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        },
        {
            "label" : "Molecular mass [Da]",
            "role" : "output",
            "id" : "mw",
            "help" : "The atomic mass",
            "type" : "text",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        },
        {
            "id" : "psv",
            "help" : "Computed from the sequence",
            "type" : "text",
            "role" : "output",
            "label" : "Partial specific volume <b><i><span style=text-decoration:overline>&nu;<span></i></b> &nbsp;[cm<sup>3</sup>/g]",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        },
        {
            "id" : "hyd",
            "help" : "Based on the NMR-freezing work of Kuntz & Kauzmann <a target=_blank href=https://doi.org/10.1016/S0065-3233(08)60232-6>doi:10.1016/S0065-3233(08)60232-6</a>",
            "type" : "text",
            "role" : "output",
            "label" : "Theoretical hydration [g H<sub>2</sub>O/g protein]",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        },
        {
            "type" : "text",
            "help" : "Computed from the non hydrated structure using the mass and positions of the atoms. This value should be close to the Rg derived from SANS in low or zero concentrations of D<sub>2</sub>O [<a target=_blank href=https://doi.org/10.1107/S1399004714013923>doi:10.1107/S1399004714013923</a>].",
            "id" : "Rg",
            "role" : "output",
            "label" : "Radius of gyration <b><i>R<sub>g</sub></i></b> &nbsp;[&#8491;]",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        },
        {
            "type" : "text",
            "help" : "The percent of peptide bonds identified by DSSP, implemented in UCSF Chimera, as &alpha;-Helix",
            "id" : "helix",
            "label" : "% Helix",
            "role" : "output",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        },
        {
            "label" : "% Sheet",
            "role" : "output",
            "help" : "The percent of peptide bonds identified by DSSP, implemented in UCSF Chimera, as &beta;-Sheet",
            "type" : "text",
            "id" : "sheet",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        }
        ,{
            "label" : "Downloads",
            "role" : "output",
            "help" : "",
            "id" : "downloads",
            "type" : "html",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        }
        ,{
            "role"              : "output"
            ,"label"             : ""
            ,"type"              : "plotly"
            ,"id"                : "iqplot"
            ,"labelmargintop"    : "0.5rem"
            ,"layout"           : {
                "parent" : "resultpanel"
                ,"data" : [ 1, 1 ]
            }
        }
        ,{
            "role"              : "output"
            ,"label"            : ""
            ,"type"             : "plotly"
            ,"id"               : "prplot"
            ,"layout"           : {
                "parent" : "resultpanel"
                ,"data" : [ 0, 2 ]
            }
        }
        ,{
            "width" : "100%",
            "height" : "500",
            "label" : "Structure",
            "help"  : "Right click on structure for more options<br>For AlphaFold structures only - coloring is by per residue confidence<br>Blues are highest confidence, reds lowest<br>",
            "role" : "output",
            "id" : "struct",
            "type" : "atomicstructure",
            "labelmargintop" : "1rem"
            ,"layout" : {
                "parent" : "structure"
            }
        }
        ,{
            "label"     : "Auto compute flexible regions from AlphaFold residue confidence"
            ,"type"     : "checkbox"
            ,"role"     : "input"
            ,"id"       : "autoflex"
            ,"repeater" : "true"
            ,"layout"   : {
                "parent" : "resultpanel2"
            }
        }
        ,{
            "label"     : "Confidence threshold for Auto compute"
            ,"role"      : "input"
            ,"help"      : "For AlphaFold structures only. Regions of confidence below this will be defined as flexible regions"
            ,"type"      : "float"
            ,"default"   : 50
            ,"id"        : "autoflexconfidencelevel"
            ,"repeat"    : "autoflex"
            ,"layout" : {
                "parent" : "resultpanel2"
            }
        }
        ,{
            "label"       : " "
            ,"role"        : "input"
            ,"help"        : "For AlphaFold structures only."
            ,"type"        : "button"
            ,"id"          : "autoflexconfidence"
            ,"repeat"      : "autoflex"
            ,"buttontext"  : "Compute flexible regions"
            ,"buttonstyle" : "select"
            ,"hook"        : "structureflex_compute_confidence.php"
            ,"hookdata"    : "autoflex-autoflexconfidencelevel"
            ,"layout" : {
                "parent" : "resultpanel2"
            }
        }
        ,{
            "label"     : "Number of flexible regions"
            ,"type"     : "integer"
            ,"role"     : "input"
            ,"id"       : "nflex"
            ,"minimum"  : 1
            ,"default"  : 1
            ,"repeater" : "true"
            ,"layout"   : {
                "parent" : "resultpanel2"
            }
        }
        ,{
            "label"     : "Flexible region start,end"
            ,"type"     : "integerpair"
            ,"role"     : "input"
            ,"id"       : "flexrange"
            ,"repeat"   : "nflex"
            ,"layout"   : {
                "parent" : "resultpanel2"
            }
        }
    ]
}
