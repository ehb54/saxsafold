{
    "moduleid"    : "finalmodel"
    ,"label"      : "Final model selection using WAXSiS"
    ,"help"       : "Compute Iq/Pr on selected structures"
    ,"executable" : "finalmodel.php"
#    ,"resource"   : "docker-local"
#    ,"dependencies" : [ 
#        { "base" : "python" }
#        ,{ "file" : "mass_load.py" }
# comment above 2 lines and uncomment 2 lines below for perl executable
#        { "base" : "perl" }
#        ,{ "cpan" : "JSON" }
#    ]
    ,"loadfields"      : "finalmodel_load.php"
# hold off until we can provide a email decision state
    ,"notify"          : "email"
    ,"panels" : [
        {
            "root" : {
                "label" : [
                    1,
                    1
                ],
                "data" : [
                    1,
                    2
                ],
                "gap" : "1px",
                "align" : "left",
                "size" : [
                    1,
                    "auto"
                ]
            }
        },
        {
            "header" : {
                "data" : [
                    2,
                    1
                ],
                "label" : [
                    1,
                    1
                ],
                "align" : "center",
                "gap" : "1px",
                "size" : [
                    "auto",
                    "auto"
                ],
                "location" : [
                    "next",
                    "full"
                ]
            }
        },
        {
            "body" : {
                "location" : [
                    "next",
                    "full"
                ],
                "size" : [
                    "auto",
                    [
                        1,
                        1
                    ]
                ]
            }
        },
        {
            "footer" : {
                "align" : "center",
                "size" : [
                    "auto",
                    "auto"
                ],
                "location" : [
                    "next",
                    "full"
                ],
                "data" : [
                    2,
                    1
                ],
                "label" : [
                    1,
                    1
                ]
            }
        },
        {
            "inputpanel" : {
                "parent" : "body",
                "location" : [
                    "next",
                    "full"
                ],
                "align" : "left",
                "size" : [
                    "auto",
                    [1,1]
                ]
            }
        },
        {
            "resultpanel" : {
                "align" : "left",
                "size" : [
                    "auto",
                    [ 1, 1 ]
                ],
                "location" : [
                    "next",
                    "full"
                ],
                "data" : [
                    1,
                    2
                ],
                "parent" : "body",
                "repeats" : {
                    "indent" : "10px"
                },
                "label" : [
                    1,
                    1
                ]
            }
        }
        ,{
            "structure" : {
                "data" : [
                    2,
                    1
                ],
                "label" : [
                    1,
                    1
                ],
                "align" : "center",
                "parent" : "body",
                "gap" : "1px",
                "size" : [
                    "auto",
                    "auto"
                ],
                "location" : [
                    "next",
                    "full"
                ]
            }
        }
        ,{
            "msgspanel" : {
                "parent" : "body",
                "location" : [
                    "next",
                    "full"
                ],
                "align" : "left",
                "size" : [
                    "auto",
                    [1,1]
                ]
            }
        }
    ]
    ,"fields"   : [
        {
            "role"       : "input"
            ,"id"        : "module_header"
            ,"label"     : "Final model selection using WAXSiS"
            ,"type"      : "label"
            ,"default"   : "header4"
            ,"prehline"  : "true"
            ,"posthline" : "true"
            ,"layout" : {
                "parent" : "header"
            }
        }
        ,{
            "role"              : "output"
            ,"id"               : "pname"
            ,"label"            : "Project name"
            ,"type"             : "text"
            ,"required"         : "true"
            ,"help"             : "Name for this project - only letters, numbers and underscores are allowed"
            ,"pattern"          : "[a-zA-Z0-9_]+"
            ,"specifiedproject" : ""
            ,"layout"     : {
                "parent" : "inputpanel"
            }

        }
        ,{
            "role"              : "output"
            ,"id"               : "desc"
            ,"label"            : "Description"
            ,"type"             : "textarea"
            ,"required"         : "true"
            ,"help"             : "Description information about this project"
            ,"layout"     : {
                "parent" : "inputpanel"
            }
        }
        ,{
            "label"             : "Downloads",
            "role"              : "output",
            "help"              : "",
            "id"                : "downloads",
            "type"              : "html",
            "labelmargintop"    : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        }
        ,{
            "label"             : "Additional adjacent frame count",
            "role"              : "input",
            "help"              : "",
            "id"                : "adjacent_frames",
            "min"               : 0,
            "default"           : 0,
            "type"              : "integer",
            "help"              : "This will include additional frames from the full MMC run adjacent to the preselected frames<br>It can not be greater that half the stride" 
            ,"layout" : {
                "parent" : "resultpanel"
            }
        }
        ,{
            "role"              : "output"
            ,"label"             : ""
            ,"type"              : "plotly"
            ,"id"                : "iqplot"
            ,"labelmargintop"    : "0.5rem"
            ,"layout"           : {
                "parent" : "resultpanel"
                ,"data" : [ 1, 1 ]
            }
        }
        ,{
            "role"              : "output"
            ,"label"             : ""
            ,"type"              : "plotly"
            ,"id"                : "iqplotwaxsis"
            ,"labelmargintop"    : "0.5rem"
            ,"layout"           : {
                "parent" : "resultpanel"
                ,"data" : [ 0, 2 ]
            }
        }
        ,{
            "role"              : "output"
            ,"label"             : ""
            ,"type"              : "html"
            ,"id"                : "iqresultswaxsis"
            ,"layout"           : {
                "parent" : "resultpanel"
#                ,"data" : [ 0, 2 ]
            }
        }
        ,{
            "role"              : "output"
            ,"label"             : ""
            ,"type"              : "html"
            ,"id"                : "csvdownloads"
            ,"layout"           : {
                "parent" : "resultpanel"
            }
        }
        ,{
            "role"        : "output"
            ,"id"         : "processing_progress"
            ,"type"       : "progress"
            ,"label"      : " "
            ,"layout"     : {
                "label"    : "none",
                "data"     : [ 1, [ 1, 3 ] ],
                "parent"  : "msgspanel"
            }
        }
        ,{
            "role"        : "output"
            ,"id"         : "progress_text"
            ,"type"       : "html"
            ,"label"      : " "
            ,"layout"     : {
                "label"    : "none",
                "data"     : [ 1, [ 1, 3 ] ],
                "parent"  : "msgspanel"
            }
        }
        ,{
            "width"              : "100%",
            "height"             : "500",
            "label"              : "Structure",
            "help"               : "Right click on structure for more options",
            "role"               : "output",
            "id"                 : "struct",
            "type"               : "atomicstructure",
#            "jsmoladd"           : "background white;frame 1;ribbon only;color green; frame all",
#            "jsmoladd"           : "background white;ribbon only;",
            "labelmargintop"     : "0.5rem"
            ,"layout" : {
                "parent" : "structure"
            }
        }
    ]
}
