                ]
            }
        },
        {
            "footer" : {
                "align" : "center",
                "size" : [
                    "auto",
                    "auto"
                ],
                "location" : [
                    "next",
                    "full"
                ],
                "data" : [
                    2,
                    1
                ],
                "label" : [
                    1,
                    1
                ]
            }
        },
        {
            "inputpanel" : {
                "parent" : "body",
                "location" : [
                    "next",
                    "full"
                ],
                "align" : "left",
                "size" : [
                    "auto",
                    [1,1]
                ]
            }
        },
        {
            "resultpanel" : {
                "align" : "left",
                "size" : [
                    "auto",
                    [ 1, 1 ]
                ],
                "location" : [
                    "next",
                    "full"
                ],
                "data" : [
                    1,
                    2
                ],
                "parent" : "body",
                "repeats" : {
                    "indent" : "10px"
                },
                "label" : [
                    1,
                    1
                ]
            }
        }
        ,{
            "msgspanel" : {
                "parent" : "body",
                "location" : [
                    "next",
                    "full"
                ],
                "align" : "left",
                "size" : [
                    "auto",
                    [1,1]
                ]
            }
        }
    ]
    ,"fields"   : [
        {
            "role"       : "input"
            ,"id"        : "module_header"
            ,"label"     : "Compute I(q)/P(r), preselect models"
            ,"type"      : "label"
            ,"default"   : "header4"
            ,"prehline"  : "true"
            ,"posthline" : "true"
            ,"layout" : {
                "parent" : "header"
            }
        }
        ,{
            "role"              : "output"
            ,"id"               : "pname"
            ,"label"            : "Project name"
            ,"type"             : "text"
            ,"required"         : "true"
            ,"help"             : "Name for this project - only letters, numbers and underscores are allowed"
            ,"pattern"          : "[a-zA-Z0-9_]+"
            ,"specifiedproject" : ""
            ,"layout"     : {
                "parent" : "inputpanel"
            }

        }
        ,{
            "role"              : "output"
            ,"id"               : "desc"
            ,"label"            : "Description"
            ,"type"             : "textarea"
            ,"required"         : "true"
            ,"help"             : "Description information about this project"
            ,"layout"     : {
                "parent" : "inputpanel"
            }
        }
