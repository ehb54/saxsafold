{
    "moduleid"    : "loadsaxs"
    ,"label"      : "Load SAXS"
    ,"help"       : "Load SAXS data"
    ,"executable" : "loadsaxs.php"
#    ,"resource"   : "docker-local"
#    ,"dependencies" : [ 
#        { "base" : "python" }
#        ,{ "file" : "mass_load.py" }
# comment above 2 lines and uncomment 2 lines below for perl executable
#        { "base" : "perl" }
#        ,{ "cpan" : "JSON" }
#    ]
    ,"requireproject"  : "true"
    ,"loadfields"      : "loadsaxs_load.php"
    ,"panels" : [
        {
            "root" : {
                "label" : [
                    1,
                    1
                ],
                "data" : [
                    1,
                    2
                ],
                "gap" : "1px",
                "align" : "left",
                "size" : [
                    1,
                    "auto"
                ]
            }
        },
        {
            "header" : {
                "data" : [
                    2,
                    1
                ],
                "label" : [
                    1,
                    1
                ],
                "align" : "center",
                "gap" : "1px",
                "size" : [
                    "auto",
                    "auto"
                ],
                "location" : [
                    "next",
                    "full"
                ]
            }
        },
        {
            "body" : {
                "location" : [
                    "next",
                    "full"
                ],
                "size" : [
                    "auto",
                    [
                        1,
                        1
                    ]
                ]
            }
        },
        {
            "footer" : {
                "align" : "center",
                "size" : [
                    "auto",
                    "auto"
                ],
                "location" : [
                    "next",
                    "full"
                ],
                "data" : [
                    2,
                    1
                ],
                "label" : [
                    1,
                    1
                ]
            }
        },
        {
            "inputpanel" : {
                "parent" : "body",
                "location" : [
                    "next",
                    "full"
                ],
                "align" : "left",
                "size" : [
                    "auto",
                    [1,1]
                ]
            }
        },
        {
            "msgspanel" : {
                "parent" : "body",
                "location" : [
                    "next",
                    "full"
                ],
                "align" : "left",
                "size" : [
                    "auto",
                    [1,1]
                ]
            }
        },
        {
            "resultpanel" : {
                "align" : "left",
                "size" : [
                    "auto",
                    [ 1, 1 ]
                ],
                "location" : [
                    "next",
                    "full"
                ],
                "data" : [
                    1,
                    2
                ],
                "parent" : "body",
                "repeats" : {
                    "indent" : "10px"
                },
                "label" : [
                    1,
                    1
                ]
            }
        }
    ]
    ,"fields"   : [
        {
            "role"       : "input"
            ,"id"        : "module_header"
            ,"label"     : "Load SAXS data"
            ,"type"      : "label"
            ,"default"   : "header4"
            ,"prehline"  : "true"
            ,"posthline" : "true"
            ,"layout" : {
                "parent" : "header"
            }
        }
        ,{
            "role"              : "output"
            ,"id"               : "pname"
            ,"label"            : "Project name"
            ,"type"             : "text"
            ,"required"         : "true"
            ,"help"             : "Name for this project - only letters, numbers and underscores are allowed"
            ,"pattern"          : "[a-zA-Z0-9_]+"
            ,"specifiedproject" : ""
            ,"layout"     : {
                "parent" : "inputpanel"
            }

        }
        ,{
            "role"              : "output"
            ,"id"               : "desc"
            ,"label"            : "Description"
            ,"type"             : "textarea"
            ,"required"         : "true"
            ,"help"             : "Enter description information about this project"
            ,"layout"     : {
                "parent" : "inputpanel"
            }
        }
        ,{
            "role" : "output",
            "label" : "Name",
            "type" : "text",
            "help" : "The structure file name or the full name from the AlphaFold database",
            "id" : "name",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "inputpanel"
            }
        }
        ,{
            "role"       : "input"
            ,"id"        : "saxsiqfile"
            ,"label"     : "SAXS I(q) file"
            ,"type"      : "lrfile"
            ,"help"      : "N.B. the momentum transfer must be  <i>q</i> = 4&#x3c0;sin(&#x398;)/&#x3bb; with units &#x212B;<sup>-1</sup>"
            ,"required"  : "true"
            ,"layout" : {
                "parent" : "inputpanel"
            }
        }
        ,{
            "role"       : "input"
            ,"id"        : "saxsprfile"
            ,"label"     : "SAXS P(r) file <a target=_blank href=https://somo.chem.utk.edu/bayesapp>[compute using BayesApp]</a>"
            ,"type"      : "lrfile"
            ,"help"      : "N.B. the <i>r</i> units must be &#x212B;"
            ,"required"  : "true"
            ,"layout" : {
                "parent" : "inputpanel"
            }
        }
        ,{
            "role" : "output",
            "label" : "SAXS I(q)",
            "type" : "plotly",
            "id" : "iqplot",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        }
        ,{
            "role" : "output",
            "label" : "SAXS P(r)",
            "type" : "plotly",
            "id" : "prplot",
            "labelmargintop" : "0.5rem"
            ,"layout" : {
                "parent" : "resultpanel"
            }
        }
    ]
}
